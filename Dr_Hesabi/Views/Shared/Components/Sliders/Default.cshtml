@using Microsoft.EntityFrameworkCore.Internal
@model IEnumerable<Dr_Hesabi.DataLayers.Entity.Sliders>

<div class="row">
    <div class="col-lg-12">
        <div id="Slider">
            <div id="Slider_Items">
                @{
                    int i = 1;
                }
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="Slide_Item @((i == 1) ? "active" : "")">
                            <img src="~/Images/Sliders/@item.ImageName" alt="@item.Title" title="@item.Title" class="img-responsive" loading="lazy">
                            @if (item.Caption != null)
                            {
                                <div class="Slide-Caption">
                                    <span>@item.Caption</span>
                                </div>
                            }
                        </div>
                        i++;
                    }
                }
                else
                {

                }
            </div>
            <div class="Slider_Left">
                <i class="mdi mdi-chevron-left"></i>
            </div>
            <div class="Slider_Right">
                <i class="mdi mdi-chevron-right"></i>
            </div>
        </div>
    </div>
</div>