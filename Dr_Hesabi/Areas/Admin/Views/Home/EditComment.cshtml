@model Dr_Hesabi.DataLayers.Entity.Comments

<div class="row">
    <div class="col-md-12">
        <form asp-action="EditComment" data-ajax="true" data-ajax-update="#ListComments" data-ajax-success="OnSuccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentID" />
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="PanelID" />
            <input type="hidden" asp-for="Method" />
            <input type="hidden" asp-for="DateTime" />
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
           <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success" />
           </div>
        </form>
    </div>
</div>