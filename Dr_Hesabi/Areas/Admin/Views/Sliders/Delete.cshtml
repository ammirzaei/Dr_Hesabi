@using Dr_Hesabi.Classes.Class
@model Dr_Hesabi.DataLayers.Entity.Sliders

@{
    ViewData["Title"] = "حذف اسلاید";
}
<h2>حذف اسلاید</h2>
<h3>آیا از این حذف مطمئن هستید؟</h3>
<div>
   <hr />
    <div class="row">
        <div class="col-md-12">
            <div class="Delete">
                <div>
                    <span>@Html.LabelFor(s => s.ImageName) : </span>
                    <span>
                        <img src="/Images/Sliders/@Model.ImageName" class="img-responsive img-thumbnail" width="200" height="200"/>
                    </span>
                </div>
                <div>
                    <span>@Html.LabelFor(s => s.Title) : </span>
                    <span>@Model.Title</span>
                </div>
                <div>
                    <span>@Html.LabelFor(s => s.Caption) : </span>
                    <span>@Model.Caption</span>
                </div>
                <div>
                    <span>@Html.LabelFor(s => s.StartDate) : </span>
                    <span>@Model.StartDate.ToDate()</span>
                </div>
                <div>
                    <span>@Html.LabelFor(s => s.EndDate) : </span>
                    <span>@Model.EndDate.ToDate()</span>
                </div>
                <div>
                    <span>@Html.LabelFor(s => s.IsActive) : </span>
                    @if (Model.IsActive)
                    {
                        <text>
                            <span id="success">فعال</span>
                        </text>
                    }
                    else
                    {
                        <text>
                            <span id="danger">غیرفعال</span>
                        </text>
                    }
                </div>
            </div>
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="SlideID" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">برگشت</a>
    </form>
</div>