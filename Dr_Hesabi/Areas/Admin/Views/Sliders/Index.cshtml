@using Dr_Hesabi.Classes.Class
@model IEnumerable<Dr_Hesabi.DataLayers.Entity.Sliders>

@{
    ViewData["Title"] = "اسلایدر";
}

<h2>اسلاید ها</h2>

<p>
    <a asp-action="Create" class="btn btn-success">افزودن اسلاید</a>
</p>
<div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>دستورات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr class="@((item.IsActive&&item.StartDate<=DateTime.Now&&item.EndDate>=DateTime.Now)?"success":"danger")">
                <td>
                    <img src="~/Images/Sliders/@item.ImageName" width="100" height="100" class="img-thumbnail"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>

                <td>
                    @item.StartDate.ToDate()
                </td>
                <td>
                    @item.EndDate.ToDate()
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <text>
                            <span class="text-success">فعال</span>
                        </text>
                    }
                    else
                    {
                        <text>
                            <span class="text-danger">غیرفعال</span>
                        </text>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SlideID" class="btn btn-primary">ویرایش</a> |
                    <a asp-action="Delete" asp-route-id="@item.SlideID" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>