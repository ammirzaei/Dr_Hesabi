@using Dr_Hesabi.DataLayers.Entity
@model IEnumerable<Dr_Hesabi.DataLayers.Entity.Gallerys>

@{
    ViewData["Title"] = "تصاویر";
    Gallerys gallery = ViewBag.Gallery;
}

<h2>@gallery.Title</h2>

<p>
    <a onclick="Create('@gallery.GalleryID')" class="btn btn-success">افزودن تصویر</a> |
    <a asp-action="Index" class="btn btn-info">برگشت</a>
</p>
<div>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>دستورات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/Gallerys/Gallery_Items/@item.ImageName" width="100" height="100" class="img-responsive img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a onclick="Edit('@item.GalleryID')" class="btn btn-primary">ویرایش</a> |
                    <a onclick="Delete('@item.GalleryID')" class="btn btn-danger">حذف</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<partial name="PartialViews/Modal" />

@section Scripts
{
    <script src="~/Scripts/Gallerys.js"></script>
}