@model IEnumerable<Dr_Hesabi.Classes.ViewModel.AdminViewModel.SetStaffToParentViewModel>

@if (Model.Any())
{
    <form asp-action="SetStaffToParent" method="post" data-ajax="true" data-ajax-update="#ListStaffs" data-ajax-success="onSuccess" data-ajax-filure="onSuccess">
        <input type="hidden" value="@ViewData["IsNative"]" name="native" />
        <div class="row">
            <div class="col-md-12">
                <div class="Delete">
                    <div>
                        <span>نام و نام خانوادگی : </span>
                        <span>
                            @ViewData["fullName"]
                        </span>
                    </div>
                    <div>
                        <span>سرگروه : </span>
                        <span>
                            <div class="checkbox">
                                @foreach (var item in Model)
                                {
                                    <label>
                                        <input required="لطفا سرگروه را تعیین کنید" type="radio" name="Staff" value="@item.StaffID" /><span> @item.Title </span>
                                    </label>
                                }
                            </div>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <input type="submit" value="ذخیره" class="btn btn-success" />
    </form>
}
else
{
    <div class="alert alert-warning text-center">
        <span>سرگروهی وجود ندارد.</span>
    </div>
}
<script src="~/Public/CheckBox/js/icheck.js"></script>