@model Dr_Hesabi.DataLayers.Entity.Staffs

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" data-ajax="true" data-ajax-method="Post" data-ajax-update="#ListStaffs" data-ajax-success="onSuccess">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffID" />
            <input type="hidden" asp-for="ParentID" />
            <input type="hidden" asp-for="Text" />
            <input type="hidden" asp-for="ImageName" />
          
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

