@model Dr_Hesabi.DataLayers.Entity.Choices


<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" data-ajax="true" data-ajax-update="#ListChoices" data-ajax-success="OnSuccess" data-ajax-failure="OnFaild">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChoiceID" />
            <input type="hidden" asp-for="QuestionID" />

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" type="number" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            @if (Model.IsSuccess == false)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsSuccess" /> @Html.DisplayNameFor(model => model.IsSuccess)
                    </label>
                </div>
               
            }
            else
            {
                <input type="hidden" name="IsHidden" value="True"/>
            }

            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-success" />
            </div>
            <span class="text-danger ErrorModal"></span>
        </form>
    </div>
</div>
<script src="~/Public/CheckBox/js/icheck.js"></script>
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
